{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "controllers/*": ["controllers/*"],
      "services/*": ["services/*"],
      "clients/*": ["clients/*"],
      "utils/*": ["utils/*"]
    }
  }
}
